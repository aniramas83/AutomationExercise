<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="specFlow" type="TechTalk.SpecFlow.Configuration.ConfigurationSectionHandler, TechTalk.SpecFlow" />
  </configSections>
  
  <connectionStrings>   
  </connectionStrings>

  <appSettings>
    <add key="Target" value="Chrome" />
    <!-- maximum wait time for a page to load-->
    <add key="PageTimeOut" value="10" />
    <!-- maximum wait time for emails in minutes -->
    <add key="MaxEmailWaitTime" value="5" />
    <!-- MLC automation-->
    <add key="MlcWeb.Url" value="https://www.mlcinsurance.com.au/" />
    <add key="TaxCalculator.Url" value="https://www.ato.gov.au/Calculators-and-tools/Host/?anchor=STC&amp;anchor=STC#STC/questions" />
   <!-- Serilog & Seq -->
    <add key="MinimumLoggingLevel" value="Verbose" />
  </appSettings>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>

  <specFlow>
    <stepAssemblies>
      <stepAssembly assembly="Automation.Core" />
      <stepAssembly assembly="SpecFlow.Assist.Dynamic" />
    </stepAssemblies>
  </specFlow>
  
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-10.0.0.0" newVersion="10.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Gherkin" publicKeyToken="86496cfa5b4a5851" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="TechTalk.SpecFlow" publicKeyToken="0778194805d6db41" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.1.0.0" newVersion="3.1.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>

</configuration>